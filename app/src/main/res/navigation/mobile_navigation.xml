<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/login_activity">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bss.carrent.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/navigate_to_login"
            app:destination="@id/login_activity" />
    </fragment>

    <activity
        android:id="@+id/login_activity"
        android:name="com.bss.carrent.ui.login.LoginActivity"
        android:label="@string/login"
        tools:layout="@layout/activity_login">
    </activity>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.bss.carrent.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.bss.carrent.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>